{% set id = block('id') is defined ? block('id') : block('name') %}
{% set value = block('value') is defined ? block('value') : request[block('name')] %}

<div class="form-group">
    <label for="{{ id }}">
        {% block title '' %}
    </label>
    <textarea
            id="{{ id }}"
            name="{% block name '' %}"
            class="form-control {% block class '' %}"
            style="overflow: hidden; resize: none; min-height: 34px; {% block style '' %}"
            {% block attributes '' %}
            >
        {{- value -}}
    </textarea>
</div>

<script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function () {
        $('#{{ id }}').autogrow({
            vertical: true,
            horizontal: false
        });
    });
</script>