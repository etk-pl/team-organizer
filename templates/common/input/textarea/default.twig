{% set id = block('id') is defined ? block('id') : block('name') %}
{% set value = block('value') is defined ? block('value') : request[block('name')] %}

<div class="form-group">
    <label for="{{ id }}">
        {% block title '' %}
    </label>
    <textarea
            id="{{ id }}"
            name="{% block name '' %}"
            class="form-control {% block class '' %}"
            style="resize: vertical; min-height: 100px; {% block style '' %}"
            {% block attributes '' %}
            >
        {{- value -}}
    </textarea>
</div>